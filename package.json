{
  "name": "ts-express-pg-boilerplate",
  "version": "0.0.1",
  "description": "TypeScript ExpressJS PostgreSQL backend boilerplate code.",
  "main": "backend.js",
  "scripts": {
    "dev": "yarn run tsc && pm2 start ./transpiled-app/backend.config.js --watch",
    "development": "yarn run dev",
    "tsc": "yarn install && tslint --project ./tsconfig.json && tsc",
    "prod": "yarn run tsc && docker-compose build && docker-compose up -d",
    "production": "yarn run prod"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:christianversloot/ts-express-pg-boilerplate.git"
  },
  "author": "Christian Versloot",
  "license": "GNU AGPLv3",
  "dependencies": {
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/pg": "^7.4.14",
    "@types/winston": "^2.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "pg": "^7.11.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "nodemon": "^1.19.1",
    "pm2": "^3.5.1"
  }
}
